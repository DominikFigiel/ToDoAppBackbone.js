@model IEnumerable<DominikToDo.Models.Task>

@{
    ViewBag.Title = "Index";
}


<h2>Index</h2>

<div class="styler">
    <fieldset class="ui-widget">
        <legend class="ui-state-legend-default ui-corner-top ui-corner-bottom">
            Task List -
            Using Backbone
        </legend>
        <div id="Task_Container">
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                Launch demo modal
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <input type="text" id="newTaskContentInput" />
                            <input type="date" id="newTaskDateInput" />

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" id="btnCreateNew" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Modal -->
            <button type="button" class="btn btn-primary">Add Task</button>
            <table id="Task_List">
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Content
                    </th>
                    <th>
                        Date
                    </th>
                    <th>

                    </th>
                </tr>
            </table>
        </div>
        <script id='Task-Template' type='text/template'>
            <td><%=Id%></td>
            <td><%=Content%></td>
            <td><%=Date%></td>
            <td>
                <input type="button" value="Edit" class="Edit" /> |
                <input type="button" value="Details" class="Detail" /> |
                <input type="button" value="Delete" class="Delete" />
            </td>
        </script>
    </fieldset>
</div>




